<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="productalert">
                <field id="display_notify_stock_button_in_category_page" translate="label" type="select" sortOrder="4.1" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Display notify stock button in category page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="allow_stock">1</field>
                    </depends>
                </field>
                <field id="display_notify_stock_button_in_product_page" translate="label" type="select" sortOrder="4.2" showInDefault="1" showInWebsite="1" canRestore="1">
                    <label>Display notify stock button in product detail page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="allow_stock">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>